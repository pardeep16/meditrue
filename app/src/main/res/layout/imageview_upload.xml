<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/imageTag"
       />
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewShowImage"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderview"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image"
                android:id="@+id/imageName"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/buttonForDelete"
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_delete"
                    android:layout_gravity="right|top" />
            </FrameLayout>
        <ImageView
            android:id="@+id/imageViewUpload"

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
            <RadioGroup
                android:id="@+id/radioGroupFileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <RadioButton
                    android:id="@+id/radioButtonPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prescription"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
                <RadioButton
                    android:id="@+id/radioButtonReports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textSize="18sp"

                    android:textColor="@android:color/black"/>
                <RadioButton
                    android:id="@+id/radioButtonBils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bills"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
                <RadioButton
                    android:id="@+id/radioButtonDischarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discharge Summary"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </RadioGroup>
            </LinearLayout>
            <EditText
               android:layout_margin="15dp"
                android:id="@+id/editTextComment"
                android:background="@drawable/comment_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="5dp"
                android:hint="Comments"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>